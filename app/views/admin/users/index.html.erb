<h1 class="mb-4">Users</h1>

<% if @pending_users.any? %>
  <div class="card mb-4">
    <div class="card-header">Pending Approval (<%= @pending_users.count %>)</div>
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr><th>Name</th><th>Email</th><th>Signed Up</th><th></th></tr>
        </thead>
        <tbody>
          <% @pending_users.each do |user| %>
            <tr>
              <td><%= link_to user.name, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.strftime("%b %d, %Y") %></td>
              <td>
                <%= button_to "Approve", approve_admin_user_path(user), method: :patch, class: "btn btn-success btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card-header">All Users (<%= @approved_users.count %>)</div>
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Paid?</th>
          <th>DD Left</th>
          <th>Admin?</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @approved_users.each do |user| %>
          <tr>
            <td><%= link_to user.name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.entry_paid? ? "✅" : "❌" %></td>
            <td><%= user.double_downs_remaining %></td>
            <td><%= user.admin? ? "✓" : "" %></td>
            <td class="d-flex gap-1">
              <%= button_to user.entry_paid? ? "Mark Unpaid" : "Mark Paid",
                  toggle_paid_admin_user_path(user), method: :patch, class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
