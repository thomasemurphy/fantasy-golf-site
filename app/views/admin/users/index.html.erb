<% content_for :title, "Admin — Users" %>

<h1>Users</h1>

<% if @pending_users.any? %>
  <section class="card">
    <h2>Pending Approval (<%= @pending_users.count %>)</h2>
    <table class="table">
      <thead>
        <tr><th>Name</th><th>Email</th><th>Signed Up</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% @pending_users.each do |user| %>
          <tr>
            <td><%= link_to user.name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td>
              <%= button_to "Approve", approve_admin_user_path(user), method: :patch, class: "btn btn-success btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<% end %>

<section class="card">
  <h2>All Users (<%= @approved_users.count %>)</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Paid?</th>
        <th>DD Left</th>
        <th>Admin?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @approved_users.each do |user| %>
        <tr>
          <td><%= link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.entry_paid? ? "✅" : "❌" %></td>
          <td><%= user.double_downs_remaining %></td>
          <td><%= user.admin? ? "✓" : "" %></td>
          <td>
            <%= button_to user.entry_paid? ? "Mark Unpaid" : "Mark Paid",
                toggle_paid_admin_user_path(user), method: :patch, class: "btn btn-sm btn-secondary" %>
            <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
