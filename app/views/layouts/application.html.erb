<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "The Feeley Tour Cup" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%# Apply saved theme before paint to avoid flash %>
    <script>
      (function() {
        var stored = localStorage.getItem('theme');
        var theme = stored || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-bs-theme', theme);
      })();
    </script>
  </head>

  <body>
    <nav class="navbar navbar-expand-md mb-4" data-controller="theme">
      <div class="container-fluid">
        <%= link_to "ðŸŒï¸ The Feeley Tour Cup", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMain">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Picks", picks_path, class: "nav-link #{'active' if controller_name == 'picks'}" %>
              </li>
              <li class="nav-item">
                <%= link_to "Standings", standings_path, class: "nav-link #{'active' if controller_name == 'standings'}" %>
              </li>
              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to "Admin", admin_root_path, class: "nav-link #{'active' if controller_name.start_with?('admin')}" %>
                </li>
              <% end %>
            <% end %>
          </ul>
          <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Account", edit_user_registration_path, class: "nav-link #{'active' if controller_name == 'registrations'}" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Out", destroy_user_session_path,
                    data: { turbo_method: :delete }, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item ms-2">
              <button class="btn btn-sm btn-outline-secondary border-0"
                      title="Toggle dark mode"
                      data-action="click->theme#toggle">
                <%# Sun icon â€” shown in dark mode %>
                <svg data-theme-target="sun" style="display:none" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="5"></circle>
                  <line x1="12" y1="1" x2="12" y2="3"></line>
                  <line x1="12" y1="21" x2="12" y2="23"></line>
                  <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                  <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                  <line x1="1" y1="12" x2="3" y2="12"></line>
                  <line x1="21" y1="12" x2="23" y2="12"></line>
                  <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                  <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                </svg>
                <%# Moon icon â€” shown in light mode %>
                <svg data-theme-target="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
              </button>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
